{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": false,
    "sourceMap": true,
    "outDir": "build",
    "esModuleInterop": true,
    "typeRoots": [
      "node_modules/@types",
      "src/global.d.ts",
    ],
    "allowUmdGlobalAccess": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*.ts", "tests/**/*.ts"
  ]
}